root = true

[*]
charset = utf-8
end_of_line = lf

[*.{ts,js,json}]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single

[*.{py,md,markdown}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
